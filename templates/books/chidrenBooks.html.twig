{% extends 'base.html.twig' %}

{% block title %} Children Books {% endblock %}

{% block body %}
    {% if childrenBooks %}
        <table class="table table-striped table-hover">
            <thead>
                <th>Book Title</th>
                <th> Actions </th>
            </thead>
            <tbody>
                {% for book in childrenBooks %}
                    <tr>
                        <td>{{book.title}}</td>
                        <td>
                            <a href="/books/child/detail/{{book.id}}" class="btn btn-dark">Details</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No books found</p>
    {% endif %}
{% endblock %}
