{% extends 'base.html.twig' %}

{% block title %} Fiction Books {% endblock %}

{% block body %}
    {% if fictionBooks %}
        <table class="table table-striped table-hover">
            <thead>
                <th>Book Title</th>
                <th> Actions </th>
            </thead>
            <tbody>
                {% for book in fictionBooks %}
                    <tr>
                        <td>{{book.title}}</td>
                        <td>
                            <a href="/books/fiction/detail/{{book.id}}" class="btn btn-dark">Details</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No books found</p>
    {% endif %}
{% endblock %}
